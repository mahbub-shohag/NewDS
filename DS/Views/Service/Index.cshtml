@model IEnumerable<DS.Models.Service>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayDetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageThumb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Caption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayDetail)
        </td>
        <td>
            <img src="~/Images/@item.ImageThumb" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ServiceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ServiceId })
        </td>
    </tr>
}

</table>
@{
    if (ViewBag.TotalService > 1)
    {
       int content_per_page = 10;
       int i=1;
       var pages = (int)ViewBag.TotalService / content_per_page; 
       <ul class="pagination">
           @do
           {
                <li>
                    @Html.ActionLink((string)i.ToString(), "Pagination/" + i, "Service")
                </li>
               i++;
           }
           while (i <= pages+1);
       </ul> 
    }
}

