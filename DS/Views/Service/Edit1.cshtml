@model DS.Models.Service
@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>
@using(Html.BeginForm("Edit","Service",FormMethod.Post,new{enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken();
    <form>
        <div class="form-group">
            @Html.LabelFor(m => m.Caption, new { @class = "col-md-2 control-label" })
            <input type="text" name="Caption" class="form-control col-md-10" value="@Model.Caption">
            @Html.ValidationMessageFor(m => m.Caption)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Detail, new { @class = "control-label col-md-2" })
            <input type="text" name="Detail" value="@Model.Detail" class="form-control col-md-10" />
            @Html.ValidationMessageFor(model => model.Detail)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cost, new { @class = "control-label col-md-2" })
            <input type="text" name="Cost" value="@Model.Cost" class="form-control col-md-10" />
            @Html.ValidationMessageFor(model => model.Cost)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ImagePath, new { @class = "control-label col-md-2" })
            <input type="file" name="file" class="form-control col-md-10" />
            @Html.ValidationMessageFor(model => model.ImagePath)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>

}
